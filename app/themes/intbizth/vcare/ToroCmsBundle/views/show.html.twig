{% extends 'ToroCmsBundle::layout.html.twig' %}

{% block content %}
    {% if template_content %}
        {{ template_content|raw }}
    {% else %}
        <div class="card card-block card-page">
            <h1 class="card-title">{{ page.title }}</h1>
            <p class="card-text">{{ page.body|raw }}</p>
        </div>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>.card-page {border: none;}</style>

    {%- if template_style -%}
        <style type="text/css">
            {{ template_style|raw }}
        </style>
    {%- endif -%}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {%- if template_script -%}
        <script type="text/javascript">
            {{ template_script|raw }}
        </script>
    {%- endif -%}
{% endblock %}
