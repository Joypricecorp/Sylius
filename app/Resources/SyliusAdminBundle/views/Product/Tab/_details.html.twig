<div class="ui active tab" data-tab="details">
    <h3 class="ui dividing header">{{ 'sylius.ui.details'|trans }}</h3>
    {% if false == form.vars.valid %}
        <div class="ui red message">Some form's field(s) is not valid</div>
    {% endif %}
    {{ form_errors(form) }}

    <div class="ui two column stackable grid">
        <div class="column">
            <div class="ui segment">
                {{ form_row(form.code) }}
                {{ form_row(form.externalOrderUrl) }}
                {{ form_row(form.specialPrice) }}
                {{ form_row(form.enabled) }}
                {% if product.simple %}
                    {{ form_row(form.variant.onHand) }}
                    {#{{ form_row(form.variant.tracked) }}#}
                    {{ form_row(form.variant.version) }}
                {% else %}
                    {{ form_row(form.options) }}
                    {{ form_row(form.variantSelectionMethod) }}
                {% endif %}

                {# Nothing to see here. #}
                <div class="ui hidden element">
                    {{ form_row(form.variantSelectionMethod) }}
                </div>
            </div>
        </div>
        <div class="column">
            {{ form_row(form.channels) }}

            {% if product.simple %}
                <h4 class="ui dividing header">{{ 'sylius.ui.pricing'|trans }}</h4>
                {{ form_row(form.variant.channelPricings, {'label': false}) }}
            {% endif %}

        </div>
    </div>
    <div class="ui hidden divider"></div>
    <div class="ui styled fluid accordion">
        {% for locale, translationForm in form.translations %}
            <div data-locale="{{ locale }}">
                <div class="title{% if 0 == loop.index0 %} active{% endif %}">
                    <i class="dropdown icon"></i>
                    <i class="{{ locale|slice(3, 2)|lower }} flag"></i> {{ locale|sylius_locale_name }}
                </div>
                <div class="ui content{% if 0 == loop.index0 %} active{% endif %}">
                    {{ form_row(translationForm.name) }}
                    {% include '@SyliusAdmin/Product/_slugField.html.twig' with { 'slugField': translationForm.slug } %}
                    {{ form_row(translationForm.shortDescription, {'attr': {'rows': 3}}) }}
                    {{ form_row(translationForm.description, {'attr': {'rows': 10, 'data-theme': 'toromce', 'class': 'toromce'}}) }}
                    {{ form_row(translationForm.attribute, {'attr': {'rows': 20, 'data-theme': 'toromce', 'class': 'toromce'}}) }}
                    {{ form_row(translationForm.manual, {'attr': {'rows': 20, 'data-theme': 'toromce', 'class': 'toromce'}}) }}
                    {{ form_row(translationForm.data, {'attr': {'rows': 40, 'data-code-mirror-yaml': 1}}) }}
                </div>
            </div>
        {% endfor %}
    </div>
    {% if product.simple %}
        <div style="display: none">
        <div class="ui hidden divider"></div>
        <div class="ui two column stackable grid">
            <div class="column">
                <div class="ui segment">
                    <h4 class="ui dividing header">{{ 'sylius.ui.shipping'|trans }}</h4>
                    {{ form_row(form.variant.shippingCategory) }}
                    {{ form_row(form.variant.width) }}
                    {{ form_row(form.variant.height) }}
                    {{ form_row(form.variant.depth) }}
                    {{ form_row(form.variant.weight) }}
                </div>
            </div>
            <div class="column">
                <div class="ui segment">
                    <h4 class="ui dividing header">{{ 'sylius.ui.taxes'|trans }}</h4>
                    {{ form_row(form.variant.taxCategory) }}
                </div>
            </div>
        </div>
        </div>
    {% endif %}
</div>

{{ toro_tinymce({mediaPath: 'products'}) }}
<script>
    $(function () {
        var CodeMirrorInit = function (editor, elId, mode) {
            if (window[editor] instanceof CodeMirror) {
                window[editor].refresh();
            } else {
                window[editor] = CodeMirror.fromTextArea(typeof elId === 'string' ? document.getElementById(elId) : elId, {
                    lineNumbers: true,
                    indentWithTabs: false,
                    mode: {name: mode, htmlMode: mode === 'twig'}
                });
            }
        };
        $('[data-code-mirror-yaml]').focus(function () {
            CodeMirrorInit($(this).data('code-mirror'), this, 'yaml');
        });
    });
</script>
<style>
    .CodeMirror {
        min-height: 400px;
        height: auto;
    }
</style>
