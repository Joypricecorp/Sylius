{% extends 'VcareWebBundle::layout.html.twig' %}

{% form_theme form 'VcareWebBundle:Form:bootstrap_4_horizontal_layout.html.twig' %}

{% block content %}
    <div class="row user-register">
        <div class="col-md-6">
            <div class="page-header">{{ 'sylius.ui.reset_password'|trans }}</div>

            <form action="{{ path('sylius_user_request_password_reset_token') }}" {{ form_enctype(form) }} method="POST">

                <div class="user-form">
                    {{ form_row(form.email) }}
                </div>

                {{ form_rest(form) }}

                <div class="form-actions pull-right">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-lock"></i>
                        {{ 'sylius.ui.reset'|trans }}
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
