{% extends 'VcareWebBundle:Account:layout.html.twig' %}
{% form_theme form 'VcareWebBundle:Form:common.html.twig' %}

{% block breadcrumbs%}
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('route_shop_homepage') }}">{{ 'sylius.ui.home'|trans }}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('sylius_shop_account_dashboard') }}">{{ 'sylius.ui.my_account'|trans }}</a>
            </li>
            <li class="breadcrumb-item active">{{ 'sylius.ui.change_password'|trans }}</li>
        </ol>
    </div>
{% endblock %}

{% block subcontent %}
    <div class="card card-block">
        <h4 class="card-title">{{ 'sylius.ui.change_password'|trans }}</h4>
        <p class="card-text">{{ 'sylius.ui.set_a_new_password_for_your_account'|trans }}</p>

        <div class="card-text">
            {{ form_start(form, {'action': path('sylius_shop_account_change_password'), 'attr': {'class': 'account-menu__content--form', 'novalidate': 'novalidate'}}) }}
                {{ form_row(form.currentPassword) }}
                {{ form_row(form.newPassword.first) }}
                {{ form_row(form.newPassword.second) }}

                <div class="text-sm-right text-xs-right">
                    <button type="submit" class="btn btn-primary">{{ 'sylius.ui.save_changes'|trans }}</button>
                </div>

                {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
