{% extends 'VcareWebBundle:Account:layout.html.twig' %}
{% form_theme form 'VcareWebBundle:Form:common.html.twig' %}

{% block breadcrumbs%}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('sylius_shop_homepage') }}">{{ 'sylius.ui.home'|trans }}</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('sylius_shop_account_dashboard') }}">{{ 'sylius.ui.my_account'|trans }}</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('sylius_shop_account_address_book_index') }}">{{ 'sylius.ui.address_book'|trans }}</a>
        </li>
        <li class="breadcrumb-item active">{{ 'sylius.ui.add_address'|trans }}</li>
    </ol>
{% endblock %}

{% block subcontent %}
    <div class="card card-block">
        <h4 class="card-title">{{ 'sylius.ui.address_book'|trans }}</h4>
        <p class="card-text">{{ 'sylius.ui.add_address'|trans }}</p>

        <div class="card-text">
            {{ form_start(form, {'action': path('sylius_shop_account_address_book_create'), 'attr': {'class': 'account-menu__content--form', 'novalidate': 'novalidate'}}) }}

            <div class="address-container">
                {% include 'VcareWebBundle:Account/AddressBook:_form.html.twig' with {'form': form} %}
            </div>

            <div class="text-xs-right">
                <a class="btn btn-default"
                   href="{{ path('sylius_shop_account_address_book_index') }}">{{ 'sylius.ui.cancel'|trans }}</a>
                <button type="submit" class="btn btn-primary">{{ 'sylius.ui.save'|trans }}</button>
            </div>

            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
