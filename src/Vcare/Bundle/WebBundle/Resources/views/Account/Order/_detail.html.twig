{% from 'VcareWebBundle:Account/Order:macros.html.twig' import state %}
{% set is_mobile_view = is_mobile_view() %}

<div class="order-detail-card card card-block">
    <div class="row">
        <div class="col-md-9 col-xs-12">
            {{ 'sylius.ui.placed_at'|trans }}: <strong>{{ order.createdAt|localizeddate }}</strong><br>
            {{ "sylius.ui.payment_method"|trans }}: <strong>{{ order.payments.last.method.name }} - {{ ("sylius.ui." ~ order.paymentState)|trans }}</strong><br>
            {{ "sylius.ui.shipping_method"|trans }}: <strong>{{ order.shipments.last.method.name }} - {{ ("sylius.ui." ~ order.shippingState)|trans }}</strong>
        </div>
        <div class="col-md-3 col-xs-12">
            {{ 'sylius.ui.order'|trans }}: <strong>{{ order.number }}</strong><br>
            {{ "sylius.ui.currency"|trans }}: <strong>{{ order.currencyCode|upper }}</strong><br>
            {{ 'sylius.ui.state'|trans }}: <strong>{{ state(order.state) }}</strong>
        </div>
    </div>
</div>

<div class="row" style="font-size: 80%">
    <div class="col-md-6 col-xs-12">
        {% set lastNewPayment = order.getLastNewPayment() %}

        {% if not lastNewPayment %}
            {% set lastNewPayment = order.payments.last %}
        {% endif %}

        <div class="card">
            <div class="card-header">
                <strong>{{ 'sylius.ui.payments'|trans }}</strong>
            </div>
            <div class="card-block">
                {% for payment in order.payments %}
                    {% set type = 'info' %}
                    {% set hint = '' %}

                    {% if 'completed' == payment.state %}
                        {% set type = 'success' %}
                    {% endif %}

                    {% if 'failed' == payment.state %}
                        {% set type = 'danger' %}
                    {% endif %}

                    {% if 'cancelled' == payment.state %}
                        {% set type = 'danger' %}
                    {% endif %}

                    {% if 'processing' == payment.state %}
                        {% set type = 'warning' %}

                        {% if 'paysbuy' == payment.method.code %}
                            {# TODO: display expire date-time #}
                            {% set hint = "กรุณาชำระเงินภายใน 24 ชม." %}
                        {% endif %}
                    {% endif %}

                    <div class="alert alert-{{ type }}" role="alert">
                        {{ payment.method }} {{ payment.amount|sylius_price(payment.currencyCode, payment.order.exchangeRate) }}
                        <strong class="pull-right">{{ ("sylius.ui." ~ payment.state)|trans }}</strong>
                        {% if hint %}
                            <p><strong>{{ hint }}</strong></p>
                        {% endif %}
                    </div>
                {% endfor %}

                {% if order.paymentState not in ['paid', 'cancelled'] and lastNewPayment.state is not same as ('processing') %}
                    {{ render(url('sylius_shop_payment_method_update', {'paymentId': lastNewPayment.id} )) }}
                {% endif %}
            </div>
        </div>
    </div>
    <div class="col-md-3 col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>{{ 'sylius.ui.shipping_address'|trans }}</strong>
            </div>
            <div class="card-block">
                {% include 'VcareWebBundle:Account/Order:_address.html.twig' with { 'address': order.shippingAddress } %}
            </div>
        </div>
    </div>
    <div class="col-md-3 col-xs-12">
        <div class="card">
            <div class="card-header">
                <strong>{{ 'sylius.ui.billing_address'|trans }}</strong>
            </div>
            <div class="card-block">
                {% include 'VcareWebBundle:Account/Order:_address.html.twig' with { 'address': order.billingAddress } %}
            </div>
        </div>
    </div>
</div>

{% if not is_mobile_view %}
    <table class="table table-striped table-bordered account-menu__product-table">
        <thead>
        <tr>
            <th>{{ 'sylius.ui.item'|trans }}</th>
            <th class="text-align-right">{{ 'sylius.ui.unit_price'|trans }}</th>
            <th class="text-align-center">{{ 'sylius.ui.qty'|trans }}</th>
            <th class="text-align-right">{{ 'sylius.ui.tax'|trans }}</th>
            <th class="text-align-right">{{ 'sylius.ui.total'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in order.items %}
            <tr>
                <td class="account-menu__product-table--product">
                    {{ include('VcareWebBundle:Product:_variant.html.twig', {'variant': item.variant}) }}
                </td>
                <td class="account-menu__product-table--price">
                    {{ item.unitPrice|sylius_price(order.currencyCode, order.exchangeRate) }}
                </td>
                <td class="account-menu__product-table--qty">{{ item.quantity }}</td>
                <td class="account-menu__product-table--total">
                    {{ item.taxTotal|sylius_price(order.currencyCode, order.exchangeRate) }}
                </td>
                <td class="account-menu__product-table--total">
                    {{ item.total|sylius_price(order.currencyCode, order.exchangeRate) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th class="text-align-right" colspan="4">
                    {{ 'sylius.ui.tax_total'|trans }}
                </th>
                <td>{{ order.taxTotal|sylius_price(order.currencyCode, order.exchangeRate) }}</td>
            </tr>
            <tr>
                <th class="text-align-right" colspan="4">
                    {{ 'sylius.ui.shipping_total'|trans }}
                </th>
                <td>{{ order.shippingTotal|sylius_price(order.currencyCode, order.exchangeRate) }}</td>
            </tr>

            {% if order.orderPromotionTotal %}
                <tr>
                    <th class="text-align-right" colspan="4">
                        {{ 'sylius.ui.promotion_total'|trans }}
                    </th>
                    <td class="text-align-right">
                        {{ order.orderPromotionTotal|sylius_price(order.currencyCode, order.exchangeRate) }}
                    </td>
                </tr>
            {% endif %}

            <tr class="table-active">
                <th class="text-align-right" colspan="4">
                    {{ 'sylius.ui.total'|trans }}
                </th>
                <th>{{ order.total|sylius_price(order.currencyCode, order.exchangeRate) }}</th>
            </tr>
        </tfoot>
    </table>
{% else %}
    {% include 'VcareWebBundle:Account/Order:_detail-xs.html.twig' %}
{% endif %}
