<div class="order-detail">
    {% for item in order.items %}
        {% set product = item.product %}
        <div class="row order-detail__product">
            <div class="col-xs-11">{{ include('VcareWebBundle:Product:_variant.html.twig', {'variant': item.variant}) }}</div>
            <div class="col-xs-4 order-detail__product--l">{{ 'sylius.order_item.quantity'|trans }}</div>
            <div class="col-xs-7">{{ item.quantity }}</div>
            <div class="col-xs-4 order-detail__product--l">{{ 'sylius.ui.unit_price'|trans }}</div>
            <div class="col-xs-7">{{ item.unitPrice|sylius_money(order.currency) }}</div>
            <div class="col-xs-4 order-detail__product--l">{{ 'sylius.ui.total'|trans }}</div>
            <div class="col-xs-7">{{ item.total|sylius_money(order.currency) }}</div>
        </div>
    {% endfor %}

    <div class="row order-detail__total">
        <div class="col-xs-6 order-detail__total--l">
            <span class="pull-right">
                {{ 'sylius.ui.items_total'|trans }}
            </span>
        </div>
        <div class="col-xs-5">
            {{ order.itemsTotal|sylius_money(order.currency) }}
        </div>
    </div>
    <div class="row order-detail__total">
        <div class="col-xs-6 order-detail__total--l">
            <span class="pull-right">
                {{ 'sylius.ui.tax_total'|trans }}
            </span>
        </div>
        <div class="col-xs-5">
            {{ order.getAdjustmentsTotalRecursively(taxAdjustment)|sylius_money(order.currency) }}
        </div>
    </div>
    <div class="row order-detail__total">
        <div class="col-xs-6 order-detail__total--l">
            <span class="pull-right">
                {{ 'sylius.ui.shipping_total'|trans }}
            </span>
        </div>
        <div class="col-xs-5">
            {{ order.adjustmentsTotal(shippingAdjustment)|sylius_money(order.currency) }}
        </div>
    </div>
    <div class="row order-detail__total order-detail__total--total">
        <div class="col-xs-6 order-detail__total--l">
            <span class="pull-right">
                {{ 'sylius.ui.total'|trans }}
            </span>
        </div>
        <div class="col-xs-5">{{ order.total|sylius_money(order.currency) }}</div>
    </div>
</div>
