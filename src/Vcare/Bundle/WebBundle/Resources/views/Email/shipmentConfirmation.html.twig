{% block subject %}
    {% autoescape false %}
    {{ 'email.shipment_confirmation.subject'|trans }}
    {% endautoescape %}
{% endblock %}
{% block body %}
    <h3>Your order has been shipped !</h3>
    {% if shipment.tracking %}
       <p>Please keep this tracking code : <strong>{{ shipment.tracking }}</strong></p>
    {% endif %}
    {{ content }}
{% endblock %}
