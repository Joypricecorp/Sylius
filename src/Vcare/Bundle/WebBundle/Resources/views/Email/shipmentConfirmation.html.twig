{% block subject %}{{ cx_settings.branding('name') }} - {{ 'ยืนยันการขนส่งสินค้า' }}{% endblock %}

{% block body %}
    {% spaceless %}
        {% set linkOrder %}
            <a href="{{ url('sylius_shop_order_show', {tokenValue: order.tokenValue}) }}"
               style="display:block;height:40px;line-height:40px;border-radius:4px;text-align:center;background:#57ad68;color:#ffffff;width:200px;text-decoration:none"
               target="_blank">{{ "sylius.ui.order_details"|trans }}</a>
        {% endset %}

        <h4>ใบสั่งซื้อเลขที่ #{{ order.number }} ถูกจัดส่งแล้ว</h4>

        {% if shipment.tracking %}
            <p>รหัสติดตามการจัดส่งของคุณคือ : <strong>{{ shipment.tracking }}</strong></p>
        {% endif %}

        <p>คุณสามารถดูรายละเอียดใบสั่งซื้อได้ที่ <br><br> {{ linkOrder|raw }}</p>

        {{ include("VcareWebBundle:Email:_footer.html.twig") }}
    {% endspaceless %}
{% endblock %}
