<div class="row">
    <div class="col-lg-4 col-md-6 col-xs-6">
        {{ form_row(form.firstName) }}
    </div>
    <div class="col-lg-4 col-md-6 col-xs-6">
        {{ form_row(form.lastName) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-8 col-md-12 col-xs-12">
        {{ form_row(form.phoneNumber) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-8 col-md-12 col-xs-12">
        {{ form_label(form.street, "Address"|trans) }}
        {{ form_row(form.street, {label:false}) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-md-6 col-xs-12">
        {{ form_row(form.city) }}
    </div>
    <div class="col-lg-4 col-md-6 col-xs-12">
        {{ form_row(form.postcode) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-8 col-md-12 col-xs-12">
        {{ form_row(form.countryCode, {'attr': {'class': 'select2 country-select'}}) }}
        <div class="province-container" data-url="{{ path('sylius_province_choice_form') }}">
            {% if form.provinceCode is defined %}
                {{ form_row(form.provinceCode, {'attr': {'class': 'select2'}}) }}
            {% endif %}
        </div>
    </div>
</div>

{% form_theme form 'form_div_layout.html.twig' %}
