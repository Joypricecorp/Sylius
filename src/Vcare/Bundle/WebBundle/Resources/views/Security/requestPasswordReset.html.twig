{% extends 'VcareWebBundle::layout.html.twig' %}

{% form_theme form 'VcareWebBundle:Form:common.html.twig' %}

{% block content %}
    <div class="row user-register">
        <div class="col-md-6">
            <div class="page-header">{{ 'sylius.ui.reset_password'|trans }}</div>

            {{ form_start(form, {'action': path('sylius_shop_request_password_reset_token'), 'attr': {'class': '', 'novalidate': 'novalidate'}}) }}
                <div class="user-form">
                    {{ form_row(form.email) }}
                </div>

                <div class="form-actions pull-right">
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-lock"></i>
                        {{ 'sylius.ui.reset'|trans }}
                    </button>
                </div>
                {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
