{% extends '@VcareWeb/layout.html.twig' %}
{% from '@VcareWeb/Product/macros.html.twig' import list %}
{% from '@VcareWeb/Macros/images.html.twig' import toro_image %}
{% set is_mobile_view = is_mobile_view() %}

{% if order_item is defined %}
    {% set product = order_item.variant.product %}
{% endif %}

{% block title %} {{ parent() }} - {{ product.name }}{% endblock %}

{% block breadcrumb %}
    <div class="container">
        <ol class="breadcrumb breadcrumb-top">
            <li class="breadcrumb-item">
                <a href="{{ path('route_shop_homepage') }}">{{ "vcare.ui.home"|trans }}</a>
            </li>
            <li class="breadcrumb-item"><a href="{{ path('route_shop_product_index') }}">{{ "vcare.ui.all_products"|trans }}</a></li>
            <li class="breadcrumb-item"><a href="{{ path('route_shop_product_index_taxon', {slug: product.mainTaxon.slug}) }}">{{ product.mainTaxon.name }}</a></li>
            <li class="breadcrumb-item active">{{ product.name }}</li>
        </ol>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row product-show">
            <div class="col-md-6 col-xs-12">
                <div class="product-show-pictures">

                    <div class="product-show-pictures__preview preload_object magnify">
                        {% set first_image = product.images.first() %}
                        {% set product_picture_l = first_image ? first_image.path|imagine_filter('850x850') : 'http://placehold.it/850x850' %}
                        {% set product_picture_xl = first_image ? first_image.path|imagine_filter('1000x1000') : 'http://placehold.it/1000x1000' %}

                        {% if is_mobile_view %}
                            <img src="{{ product_picture_l }}">
                        {% else %}
                            <img src="{{ product_picture_l }}" class="zoom" data-magnify-src="{{ product_picture_xl }}">
                        {% endif %}
                    </div>

                    {% if product.images|length > 1 %}
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">
                            <div class="carousel-inner" role="listbox">
                                {% for image in product.images %}
                                    {% if loop.index%4==1 %}
                                        <div class="carousel-item product-show-pictures__item row {{ loop.first ? 'active' : '' }}">
                                    {% endif %}
                                    <div class="product-show-pictures__item--list col-xs-4">
                                        <a href="{{ image.path|imagine_filter('850x850') }}" title="{{ product.name }}">
                                            <input class="xl-image-path" type="hidden" value="{{ image.path|imagine_filter('1000x1000') }}">
                                            <img src="{{ image.path|imagine_filter('120x90') }}" alt="{{ product.name }}"/>
                                        </a>
                                    </div>
                                    {% if loop.index%4==0 or loop.last %}
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            {% if product.images|length > 4 %}
                                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                                    <span class="icon-prev" aria-hidden="true"></span>
                                    <span class="sr-only">{{ "sylius.ui.previous"|trans }}</span>
                                </a>
                                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                                    <span class="icon-next" aria-hidden="true"></span>
                                    <span class="sr-only">{{ "sylius.ui.next"|trans }}</span>
                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="col-md-6 col-xs-12">
                <h1 class="product-show-box__header">{{ product.name }}</h1>

                {% if product.shortDescription %}
                    <div class="product-show-box__description--short">{{ product.shortDescription|markdown }}</div>
                {% endif %}

                {% if product.code %}
                    <div class="product-show-box__code"><strong>{{ "sylius.ui.code"|trans }}</strong>: {{ product.code }}</div>
                {% endif %}

                <div class="product-show-box__shopping">
                    {% include 'VcareWebBundle:Product:_box_shopping.html.twig' %}
                </div>

                <hr>
                <div class="product-show-box__share">
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-google-plus"></i></a>
                </div>

                {#{% if product.attributes|length %}
                    <h3>{{ 'sylius.ui.attributes'|trans }}</h3>
                    <div class="table-responsive">
                        <table class="table table-sm product-show-box__attributes">
                            <tbody>
                            {% for attribute in product.attributes %}
                                <tr>
                                    <td>{{ attribute.name }}</td>
                                    <td>{{ attribute.value }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}#}
            </div>
        </div>

        <div class="product-show-content">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#product-show-tab-detail">{{ "sylius.ui.details"|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#product-show-tab-attribute">{{ "vcare.ui.attributes"|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#product-show-tab-manual">{{ "vcare.ui.manual"|trans }}</a>
                </li>
            </ul>

            <div class="tab-content product-show-tab">
                <div id="product-show-tab-detail" class="tab-pane active">
                    {{ product.description|raw }}
                </div>
                <div id="product-show-tab-attribute" class="tab-pane">
                    {{ product.attribute|raw }}
                </div>
                <div id="product-show-tab-manual" class="tab-pane">
                    {{ product.manual|raw }}
                </div>
            </div>
        </div>

        <div class="product-association">
            {% if product.associations|length %}
                <div class="page-header">{{ 'sylius.ui.you_may_also_like'|trans|raw }}</div>
                <div class="row">
                    {% for association in product.associations %}
                        {% if association.associatedProducts|length > 0 %}
                            {{ list(association.associatedProducts) }}
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
