<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>{{ 'sylius.ui.item'|trans }}</th>
        <th class="text-align-right">{{ 'sylius.ui.price'|trans }}</span></th>
        <th class="text-align-center">{{ 'sylius.ui.qty'|trans }}</th>
        <th class="text-align-right">{{ 'sylius.ui.tax'|trans }}</th>
        <th class="text-align-right">{{ 'sylius.ui.total'|trans }}</th>
    </tr>
    </thead>
    <tbody>
        {% for item in order.items %}
            {% set product = item.product %}
            <tr>
                <td>{{ loop.index }}.</td>
                <td>{{ include('VcareWebBundle:Product:_variant.html.twig', {'variant': item.variant}) }}</td>
                <td class="text-align-right">
                    {{ item.unitPrice|sylius_price(order.currencyCode, order.exchangeRate) }}
                </td>
                <td class="text-align-center">{{ item.quantity }}</td>
                <td class="text-align-right">
                    {{ item.taxTotal|sylius_price(order.currencyCode, order.exchangeRate) }}
                </td>
                <td class="text-align-right">
                    {{ item.total|sylius_price(order.currencyCode, order.exchangeRate) }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th class="text-align-right" colspan="5">{{ 'sylius.ui.tax_total'|trans }}</th>
        <td class="text-align-right">{{ order.taxTotal|sylius_price(order.currencyCode, order.exchangeRate) }}</td>
    </tr>
    <tr>
        <th class="text-align-right" colspan="5">{{ 'sylius.ui.shipping_total'|trans }}</th>
        <td class="text-align-right">{{ order.shippingTotal|sylius_price(order.currencyCode, order.exchangeRate) }}</td>
    </tr>

    {% if order.orderPromotionTotal %}
        <tr>
            <th class="text-align-right" colspan="5">{{ 'sylius.ui.promotion_total'|trans }}</th>
            <td class="text-align-right">
                {{ order.orderPromotionTotal|sylius_price(order.currencyCode, order.exchangeRate) }}
            </td>
        </tr>
    {% endif %}

    <tr class="grand-total">
        <th class="text-align-right" colspan="5">{{ 'sylius.ui.total'|trans }}</th>
        <td class="text-align-right">{{ order.total|sylius_price(order.currencyCode, order.exchangeRate) }}</td>
    </tr>
    </tfoot>
</table>
