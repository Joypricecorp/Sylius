<nav class="nav-main">
    <div class="nav-main__top row">
        <div class="col-xs-12">
            <div class="container">
                <ul class="nav navbar-nav nav-main__top-user">
                    {{ knp_menu_render('vcare.shop.locale', {'template': 'VcareWebBundle:Menu:locale.html.twig', 'display': 'desktop'}) }}
                    {% if is_granted('ROLE_USER') %}
                        {% set user = app.user %}
                        <li class="nav-item nav-item-user">
                            <div class="dropdown">
                                <a class="dropdown-toggle" id="dropdownUser" data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false">
                                    <img src="{{ asset('assets/web/img/avatar.png') }}">
                                    <span>{{ user.customer ? user.customer.fullname : user.username }}</span>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownUser">
                                    <li class="dropdown-item">
                                        <a href="{{ path('sylius_shop_account_order_index') }}">
                                            <i class="fa fa-shopping-cart"></i>{{ 'sylius.ui.order_history'|trans }}
                                        </a>
                                    </li>
                                    <li class="dropdown-item">
                                        <a href="{{ path('sylius_shop_account_dashboard') }}">
                                            <i class="fa fa-user"></i>{{ 'sylius.ui.profile'|trans }}
                                        </a>
                                    </li>
                                    <li class="dropdown-item">
                                        <a href="{{ path('sylius_shop_account_change_password') }}">
                                            <i class="fa fa-sign-in"></i>{{ 'sylius.ui.change_password'|trans }}
                                        </a>
                                    </li>
                                    <li class="dropdown-item">
                                        <a href="{{ path('sylius_shop_logout') }}">
                                            <i class="fa fa-sign-out"></i>{{ 'sylius.ui.logout'|trans }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link navbar-user__reg" href="{{ path('sylius_shop_register') }}">
                                <i class="fa fa-user"></i> {{ "sylius.ui.register"|trans }}
                            </a>
                        </li>
                        <li class="nav-item navbar-user__log">
                            <a class="nav-link" href="{{ path('sylius_shop_login') }}">
                                <i class="fa fa-sign-in"></i>
                                {{ "sylius.ui.login"|trans }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

    {% set product_taxon_root = channel_settings.getProductTaxonRootCode() %}
    {% set categories = render(path('route_shop_partial_taxon_index_by_code', {code: product_taxon_root, template: 'VcareWebBundle:Menu:taxon.html.twig'})) %}

    <div class="nav-main__menu row">
        <div class="col-xs-12">
            <div class="container">
                <div class="row">
                    <div class="col-md-9 hidden-sm-down">
                        <div itemscope class="nav-main__menu-brand">
                            <a itemprop="url" href="{{ path('route_shop_homepage') }}">
                                {% if cx_settings.branding('logo')|default(null) %}
                                    <img itemprop="logo" id="site-logo" src="{{ cx_settings.branding('logo') }}" alt="{{ cx_settings.branding('name') }}">
                                {% else %}
                                    {{ cx_settings.branding('name') }}
                                {% endif %}
                            </a>
                        </div>
                        <div class="nav-main__menu-category">{{ categories|raw }}</div>
                    </div>
                    <div class="col-md-3 col-xs-10 nav-main__menu-cart">
                        {% set cart = cart_context.getCart() %}
                        <a class="btn btn-primary" href="{{ path('route_shop_product_index') }}">
                            {{ "vcare.ui.all_products"|trans }}
                        </a>
                        <div class="dropdown dropdown-cart">
                            <a class="btn btn-ok cart" href="{{ path('sylius_shop_cart_summary') }}" data-toggle="dropdown">
                                <i class="fa fa-shopping-cart"></i> <strong>{{ cart.items|length }}</strong>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                {% from "@VcareWeb/Product/macros.html.twig" import variants_cart %}
                                <div class="dropdown-item">
                                    {% if cart.empty %}
                                        <h6 class="text-align-center">{{ "sylius.ui.your_cart_is_empty"|trans }}</h6>
                                    {% else %}
                                        {{ variants_cart(cart.items, '80x80') }}
                                    {% endif %}
                                </div>
                                <div class="dropdown-divider"></div>
                                <div class="dropdown-item m-b-1">
                                    <div class="text-align-right m-b-3">
                                        {% import "@SyliusShop/Common/Macro/money.html.twig" as money %}
                                        <h6>{{ "sylius.ui.subtotal"|trans }}: {{ money.convertAndFormat(cart.total) }}</h6>
                                    </div>
                                    <div class="text-align-center">
                                        <a class="btn btn-secondary view-cart" href="{{ path('sylius_shop_cart_summary') }}">
                                            {{ "sylius.ui.view_and_edit_cart"|trans }}
                                        </a>
                                        <a class="btn btn-ok checkout" href="{{ path('sylius_shop_checkout_start') }}">
                                            {{ "sylius.ui.checkout"|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-2 nav-main__menu-toggle hidden-md-up">
                        <button class="btn btn-hamburger"><i class="fa fa-navicon"></i></button>
                    </div>

                    <div class="col-xs-12 nav-main__menu-category category-toggle hidden-md-up hidden-sm-down">
                        {{ categories|raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>
