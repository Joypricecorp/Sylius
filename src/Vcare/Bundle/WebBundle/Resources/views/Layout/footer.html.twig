{%- set footer_content -%}
    {{ render(url('toro_cms_partial_page', {slug: 'main-footer'})) }}
{%- endset -%}
<footer class="footer">
    <div class="footer__sitemap">
        <div class="container">
            {% if footer_content %}
                {{ footer_content|raw }}
            {% else %}
                <div class="row footer__sitemap--ct">
                    <div class="col-xs-12 col-md-3 col-lg-2">
                        <h4>{{ 'Products'|trans }}</h4>
                        {{ render(url('route_shop_partial_taxon_menus', {code: 'category', template: 'VcareWebBundle:Footer:taxon.html.twig'})) }}
                    </div>
                    <div class="col-xs-12 col-md-3 col-lg-2">
                        <h4>{{ 'Company'|trans }}</h4>
                        <ul>
                            <li><a href="/about-us">{{ 'About Us'|trans }}</a></li>
                            <li><a href="/contact-us">{{ 'Contact Us'|trans }}</a></li>
                        </ul>
                    </div>
                    <div class="col-xs-12 col-lg-3">
                        <h4>{{ 'Contact'|trans }}</h4>
                        <a href="mailto:{{ site_mail }}">{{ site_mail }}</a>
                        <div class="footer__sitemap--add">
                            <p>66(0) 2883 0871 – 9</p>
                            <p>Mon - Fri 8:30AM - 6.00PM Pst</p>
                        </div>
                    </div>
                    <div class="col-xs-12 col-lg-3">
                        <h4>{{ 'Share'|trans }}</h4>
                        <div class="footer__sitemap--social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</footer>
