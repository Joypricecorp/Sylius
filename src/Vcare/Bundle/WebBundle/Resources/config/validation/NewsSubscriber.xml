<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">
    <class name="Vcare\Bundle\WebBundle\Model\NewsSubscriber">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">email</option>
            <option name="message">vcare.news_subscriber.email.aready</option>
            <option name="groups">
                <value>vcare</value>
            </option>
        </constraint>
        <property name="email">
            <constraint name="NotBlank">
                <option name="message">vcare.news_subscriber.email.not_blank</option>
                <option name="groups">
                    <value>vcare</value>
                </option>
            </constraint>
            <constraint name="Email">
                <option name="message">vcare.news_subscriber.email.invalid</option>
                <option name="groups">
                    <value>vcare</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
