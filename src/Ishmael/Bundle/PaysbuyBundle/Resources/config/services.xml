<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ishmael.payum.paysbuy_gateway_factory" class="Ishmael\Bundle\PaysbuyBundle\Payum\PaysbuyGatewayFactory">
            <tag name="payum.gateway_factory_builder" factory="paysbuy"/>
        </service>

        <service id="ishmael.payum_extension.complete_order_extension" class="Ishmael\Bundle\PaysbuyBundle\Payum\Extension\UpdateStateExtension">
            <argument id="sm.factory" type="service"/>
            <argument id="sylius.manager.order" type="service"/>
            <argument id="sylius.order_processing.state_resolver" type="service"/>
            <tag name="payum.extension" factory="paysbuy" gateway="paysbuy" all="false"/>
        </service>
    </services>
</container>
